<div class="row">
  <div class="col-xl-12">
    <h3>Edit Property</h3>
    <form method="post" action="/properties/<%=@property.id%>">
      <input type="hidden" name="_method" value="patch">
      <p>
        <span class="form-label">Name</span>:<br>
        <input type="text" name="property[name]" value="<%=@property.name%>"></p>
      <p>
        <span class="form-label">Content</span>:<br>
        <textarea rows="10" cols="50" name="property[content]"><%=@property.content%></textarea>
      </p>
      <div class="property-edit-buttons-div">
        <input type="submit" value="Save">
        
        <%if current_user.items.include?(@property.item)%>
          <button type="button" class="property-delete-button" onclick="confirmDeletion();">Delete</button>
        <%end%>

      </div>
    </form>
  </div>
</div>

<%if current_user.items.include?(@property.item)%>
  <script>
    function confirmDeletion(){
      if (confirm("Are you sure you want to delete this property?")){
        window.location.assign("/properties/<%=@property.id%>/delete")
      }
      return false;
    }
  </script>
<%end%>
